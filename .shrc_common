# loading dircolors for ls
if [ -f $HOME/.dircolors.ansi-universial ] ; then
    eval `dircolors $HOME/.dircolors.ansi-universial`
fi

# set locales if not set
if [ -z "$LANG" ] ; then
    export LANG=en_GB.UTF-8
fi

# environment variables
export EDITOR="vim"

# usefull aliases
alias ls='ls --color=auto'
